<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KanbanApp.Pages.CreateTaskPage"
             Title="CreateTaskPage">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <VerticalStackLayout Spacing="24" Padding="50">
                <Frame Padding="10,0,0,0">
                    <Entry
                    x:Name="boardTitelEntry"
                    PlaceholderColor="Gray"
                    Placeholder="Navnet pÃ¥ dit board" 
                    Text="{Binding NewBoard.Titel}"/>
                </Frame>
                <Frame Padding="10,0,0,0">
                    <DatePicker Date="{Binding NewBoard.DeadLine}"/>
                </Frame>
                <Button
                Margin="50,0,50,0"
                Text="Opret board"
                Command="{Binding CreateBoardCommand}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>