<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KanbanApp.Pages.BoardPage"
             Title="{Binding CurrentBoard.Titel}"
             xmlns:viewmodel="clr-namespace:KanbanApp.ViewModels"
             x:DataType="viewmodel:BoardViewModel">
    <VerticalStackLayout>
        <Border Padding="0,10" >
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
                <Button
                        Text="Inviter brugere"
                        Padding="10"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        />
                <Button
                        Text="Ny Opgave"
                        Padding="10"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        />
                <Button
                        Text="Ny Kategori"
                        Padding="10"
                        CornerRadius="10"
                        FontAttributes="Bold"
                    Command="{Binding GoToCreateCategoryCommand}"/>
            </HorizontalStackLayout>
        </Border>
        <HorizontalStackLayout>
            <Label Text="{Binding CurrentBoard.Categories.Count}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>